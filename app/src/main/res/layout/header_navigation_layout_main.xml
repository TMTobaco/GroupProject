<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeader">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_header_16dp"
        android:layout_marginTop="@dimen/margin_top_header_40dp">

        <RelativeLayout
            android:id="@+id/relative_layout_image_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_image_header_navigation_main">

            <ImageView
                android:id="@+id/image_view_header"
                android:layout_width="@dimen/avatar_width_header_64dp"
                android:layout_height="@dimen/avatar_width_header_64dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtitle_header_56dp"
            android:layout_below="@+id/relative_layout_image_header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/txt_user_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_name_fontawesome"
                    android:text="@string/user_name_main"
                    android:textColor="@color/colorTextNavigation"
                    android:textSize="@dimen/txt_header_size_14sp" />

                <TextView
                    android:id="@+id/txt_email_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_user_header"
                    android:text="@string/email_name_main"
                    android:textColor="@color/colorTextNavigation"
                    android:textSize="@dimen/txt_header_size_14sp" />

                <Spinner
                    android:id="@+id/spinner_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txt_user_header"></Spinner>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>